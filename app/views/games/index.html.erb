<div class="container">
  <h2 class="text-center my-4">Nos jeux disponibles</h2>

  <%= render 'shared/searchbar' %>
  <br>
  <p> <%= @state %> </p>
  <div class="row row-cols-3 mt-3">
      <% @games.each do |game| %>
        <div class="col mt-3">
          <div class="card h-100">
            <%= image_tag(game.photo.attached? ?  cl_image_path(game.photo.key) : image_path("game_default_picture.jpg"), class: "card-img-top image-sizing") %>
            <div class="card-body">
              <h5 class="card-title"><%= game.name %></h5>
              <p class="card-text"><%= game.description.truncate(200) %></p>
              <%= link_to "DÃ©couvrir", game_path(game), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>


